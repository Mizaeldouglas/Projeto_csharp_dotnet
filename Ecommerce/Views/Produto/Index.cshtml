@model List<Produto>

<div>
    <a asp-area="" asp-controller="Produto" asp-action="Create" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Criar Produto
    </a>
</div>

<h2>Lista de Produtos</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Preço</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var produto in Model)
    {
        <tr>
            <td>@produto.Id</td>
            <td>@produto.Nome</td>
            <td>@produto.Preco.ToString("0.00")</td>
            <td>
                <a asp-action="Details" asp-route-id="@produto.Id" class="btn btn-info btn-sm">
                    <i class="fas fa-eye"></i> Detalhes
                </a>
                <a asp-action="Edit" asp-route-id="@produto.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@produto.Id" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i> Excluir
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>