@model Produto 

<div>
    <a asp-area="" asp-controller="Produto" asp-action="Index" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<h2>Excluir Produto</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Id: @Model.Id</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Preço</dt>
            <dd class="col-sm-10">@Model.Preco.ToString("0.00")</dd>
            <!-- Adicione outros campos conforme necessário -->
        </dl>

        <form asp-action="Delete" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este produto?');">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirmar Exclusão
            </button>
        </form>
    </div>
</div>
